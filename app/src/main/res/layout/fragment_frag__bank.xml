<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context="com.example.hp_2000.engineer_way_02.Frag_Bank">


        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Related To:"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="35sp" />
        />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <Button
            android:textColor="#fff"
            android:id="@+id/button1"
            android:text="RTGS"
            android:textSize="30sp"
            android:background="@drawable/roundedbutton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="fun_rtgs"/>

        <Button
            android:textColor="#fff"
            android:id="@+id/button3"
            android:text="NEFT"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="fun_neft"
            android:layout_weight="1"
            android:background="@drawable/roundedbutton1" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="#fff"
            android:id="@+id/button2"
            android:text="IMT"
            android:textSize="30sp"
            android:background="@drawable/roundedbutton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="fun_imt"/>

        <Button
            android:textColor="#fff"
            android:textAllCaps="false"
            android:text="FAQs"
            android:textSize="30sp"
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="fun_faq"

            android:layout_weight="1"
            android:background="@drawable/roundedbutton1" />
    </LinearLayout>


</LinearLayout>
